            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Voir mes cartes bancaires"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:backgroundTint="@color/fond_bouton"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/virer_vers_ma_banque_bouton_parametres"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="3dp" />

        <ImageView
            android:id="@+id/ic_carte_bancaire_parametres"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_carte_bancaire"
            app:layout_constraintBottom_toBottomOf="@+id/voir_mes_cb_bouton_parametres"
            app:layout_constraintStart_toStartOf="@+id/voir_mes_cb_bouton_parametres"
            app:layout_constraintTop_toTopOf="@+id/voir_mes_cb_bouton_parametres" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/modifier_coordonnees_bouton_parametres"
            android:layout_width="376dp"
            android:layout_height="73dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Modifier mes coordonnées"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:backgroundTint="@color/fond_bouton"
            app:cornerRadius="10dp"
