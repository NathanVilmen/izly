            app:layout_constraintTop_toBottomOf="@+id/voir_mes_cb_bouton_parametres"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="3dp" />

        <ImageView
