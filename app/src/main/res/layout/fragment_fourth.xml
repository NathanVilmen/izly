        <com.google.android.material.button.MaterialButton
            android:id="@+id/faire_opposition_bouton_parametres"
            android:layout_width="376dp"
            android:layout_height="73dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Faire opposition à mon compte"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:backgroundTint="@color/fond_bouton"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modifier_code_secret_bouton_parametres"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="3dp" />

        <ImageView
