            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="3dp" />

        <ImageView
            android:id="@+id/ic_code_secret_parametres"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="12dp"
