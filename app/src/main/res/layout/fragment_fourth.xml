<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.FourthFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/img_fond_bleu_parametres"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:src="@drawable/ic_bg_bleu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo_izly_parametres"
            android:layout_width="99dp"
            android:layout_height="51dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_izly"
            app:layout_constraintBottom_toBottomOf="@+id/img_fond_bleu_parametres"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/virer_vers_ma_banque_bouton_parametres"
            android:layout_width="376dp"
            android:layout_height="73dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Virer vers ma banque"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:backgroundTint="@color/fond_bouton"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_fond_bleu_parametres"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="3dp" />

        <ImageView
            android:id="@+id/ic_banque_parametres"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_banque"
            app:layout_constraintBottom_toBottomOf="@+id/virer_vers_ma_banque_bouton_parametres"
            app:layout_constraintStart_toStartOf="@+id/virer_vers_ma_banque_bouton_parametres"
            app:layout_constraintTop_toTopOf="@+id/virer_vers_ma_banque_bouton_parametres" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/voir_mes_cb_bouton_parametres"
